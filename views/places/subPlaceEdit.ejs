<html>
  <head>
    <title>New SubPlace</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/blog.css" />
    <script src="//cdn.ckeditor.com/4.14.0/basic/ckeditor.js"></script>
  </head>
  <body>
    <h1 class="text-center">Form for adding new Sub Places</h1>
    <div class="container">
      <form action="/places/posts/<%=id%>/subPlaces/<%=subPlace._id%>?_method=PUT" method="POST" >
        <input type="text" name="subPlace[title]" placeholder="Post title" value="<%=subPlace.title%>"  autofocus="on" minlength="4"/>
        <textarea id='editor' id="wysiwyg" name="subPlace[content]" value="<%=subPlace.content%>" type="text" placeholder="Post Content..." required minlength="30"></textarea>
        <input type="text" name="subPlace[image]" value="<%=subPlace.image%>" />
        <input type="submit" value="Publish" />
      </form>
    </div>
    <script>
      CKEDITOR.replace('editor');
      </script>
  </body>
</html>
