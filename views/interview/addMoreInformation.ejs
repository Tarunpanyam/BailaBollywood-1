<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Add More Information</title>
  </head>
  <body>
    <h1 class="text-center">Add More Information Page for Formal Interviews</h1>
    <div class="container">
      <div class="text-center" style="margin-top:20px;">
        
        <button style="width: 80%;"  class="btn btn-primary" onclick="openform1()">Add Title + Image Only</button>
      
      </div>
      <div class="text-center" style="margin-top:20px;">
        <a href="/interviews/posts/<%=id%>/form2">
        <button style="width: 80%;"  class="btn btn-primary">Add Title + Text Only</button>
      </a>
      </div>
      <div class="text-center" style="margin-top:20px;">
        <a href="/interviews/posts/<%=id%>/form3">
        <button style="width: 80%;"  class="btn btn-primary">Add  Title + Image + Text</button>
      </a>
      </div>
      
      <div class="container" id="form1" style="margin-top: 100px;">
        <form action="/interviews/posts/<%=id%>?type=1" method="POST">
            <div class="input-group input-group-lg">
                
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
                  
                  name="subInterview[title]"
                  placeholder="Enter Your Title">
              </div>
              
              <div class="input-group input-group-lg mt-3">
                
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
                name="subInterview[image]"  
                    placeholder="Enter Image URL">
              </div>
              <div class="text-center" style="margin-top:20px;">
                <button style="width: 80%;" type="submit" class="btn btn-primary">Publish</button>
              </div>
              <div class="text-center" style="margin-top:20px;">
                <button style="width: 80%;" type="button" onclick="closeform1()" class="btn btn-danger">Close Form</button>
              </div>
              
              
            </form>
          </div>
      


    </div>
    
    <script>
      CKEDITOR.replace('editor');
      </script>
      <script>
        function openform1(){
          document.getElementById("form1").style.display = "block";
        }
        function closeform1(){
          document.getElementById('form1').style.display="none";
        }
      </script>
  </body>
</html>