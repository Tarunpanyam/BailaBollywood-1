<body>

    <% blogs.forEach( blog => { %>
<div class="container-fluid">
      <div class="row" style= "padding: 20px 0px; padding-bottom:10px;">
        <div class="col-12 col-sm-12 col-md-5">
          <div class="container">
            <a href="/blogs/posts/5eb97e630568a927d4f74c8c" class="article-links"><div class="promo" style="--overlay-color: hotpink">
                <div class="image-wrapper">
              
                    
                  <% if(blog.image.localeCompare("")==1){%>
                    
                    <img src="/uploads/<%= blog.thumbnail %>" />
                    <%} else {%>
                      
                      
                      <img src="<%= blog.thumbnail %>"/>`
                      <%}%>
                  
                
                
                </div>
                <h2 class="title" data-cta="Explora nuestro mundo â†’"></h2>
            </div></a>
          </div>
        </div>
        <div class="col-12 col-sm-12 col-md-7" style="padding-top: 20px;"> 
          <div class="container">
          
            <div>
              <p><span style="padding:5px; color:black; border:1px black solid"><%=blog.time%></span></p>
             <h1 style="padding:5px;color:black;"><%=blog.title%></h1>
             <p>Tags:<%=blog.tag%></p>
             
             <p style="color:black; word-wrap:break-word;" class="target"><%=blog.content%></p>
            <a href="/blogs/posts/<%= blog._id %>"> 
             <button id="read-btn" class="read-more-btn" >Lee Mas</button>
            </a></div><a href="/blogs/posts/<%= blog._id %>">
          </a>
        </div>
        </div>
      </div>
    </div>
    <%})%>


    


    
	<div class="container grid-layout">
    <h1 style="padding-top:70px; margin-bottom:20px; font-weight: bold;" class="text-center display-4">Latest Posts</h1>
    <%    latestBlogs.forEach(data=>{ if(data.index===1){ %>
        <div class="row d-flex justify-content-between">
            
          <%}if(data.check===0){%>
            <div id="lt-blog" class="col-12 col-md-4 my-2">
              <a href="<%=data.url%>">
            <img src="/uploads/<%= data.thumbnail %>" alt="image" style="width:100%; height:250px;">
          </a>
            <p style="color:grey;font-weight: bolder;"><%=data.title%><br><span>Category-<%=data.tag%></span></p>
          
        </div>
      
        <%}else{%>
        <div id="lt-blog" class="col-12 col-md-4 my-2">
              <a href="<%=data.url%>">
            <img src="<%=data.thumbnail%>" alt="image" style="width:100%; height:250px;">
          </a>
            <p style="color:grey;font-weight: bolder;"><%=data.title%><br><span>Category-<%=data.tag%></span></p>
          
        </div>
      
    
      <%}if(data.index===3){%>
      </div> 
  <%}})%>
    
        
            
